# Application Settings
APP_NAME=Weather Service API
APP_VERSION=1.0.0

# External Weather API Configuration (DEMO ONLY - Uses dummy data)
WEATHER_API_URL=https://api.example.com/weather
WEATHER_API_TIMEOUT=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600
REDIS_STALE_TTL=86400
REDIS_DECODE_RESPONSES=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging and Cache Settings
LOG_LEVEL=INFO
ENABLE_CACHE_WARMING=true
CACHE_WARM_INTERVAL=3600
TOP_CITIES_COUNT=10
CACHE_WARM_MAX_TOKENS=20
CACHE_WARM_MIN_TOKENS_REMAINING=50

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=300

# Retry Settings
RETRY_MAX_ATTEMPTS=3
RETRY_WAIT_FIXED=1
RETRY_WAIT_RANDOM_MIN=0
RETRY_WAIT_RANDOM_MAX=2

# CORS Settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]